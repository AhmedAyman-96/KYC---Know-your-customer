[
  {
    "id": "full_name",
    "label": "Full Name",
    "type": "text",
    "required": true,
    "placeholder": "Enter your full name"
  },
  {
    "id": "gender",
    "label": "Gender",
    "type": "radio_buttons",
    "required": false,
    "options": ["Male", "Female", "Other"]
  },
  {
    "id": "hobbies",
    "label": "Hobbies",
    "type": "multi_choice",
    "required": false,
    "options": ["Reading", "Traveling", "Sports", "Gaming"],
    "min": 1,
    "max": 3
  },
  {
    "id": "country",
    "label": "Country of Residence",
    "type": "drop_down",
    "required": false,
    "options": ["Egypt", "USA", "Germany", "Other"],
    "placeholder": "Select your country"
  },
  {
    "id": "date_of_birth",
    "label": "Date of Birth",
    "type": "date_picker",
    "required": true,
    "maxDate": "today",
    "placeholder": "Select your date of birth"
  },
  {
    "id": "email",
    "label": "Email Address",
    "type": "text",
    "required": true,
    "placeholder": "Enter your email address"
  },
  {
    "id": "profile_picture",
    "label": "Profile Picture",
    "type": "file_upload",
    "required": false,
    "accept": ".jpg,.jpeg,.png,.gif",
    "maxSize": 5,
    "multiple": false
  },
  {
    "id": "bio",
    "label": "Bio",
    "type": "textarea",
    "required": false,
    "placeholder": "Tell us about yourself",
    "rows": 3,
    "minLength": 10,
    "maxLength": 500
  },
  {
    "id": "documents",
    "label": "Supporting Documents",
    "type": "file_upload",
    "required": true,
    "accept": ".pdf,.jpg,.jpeg,.png",
    "maxSize": 10,
    "multiple": true
  }
]
